@{
    ViewBag.Title = "关于我们";
}

<!-- banner -->
<div class="zy_banner">
    <img src="../Content/images/web/zy_banner01.jpg">
    <div class="zy_title">
        <div>
            <h1>党群建设</h1>
            <span>The construction of the party and the masses</span>
        </div>
    </div>
</div>
<!-- banner end -->
<!-- 主体 -->
<div class="zy_content" id="partPage">
    <div class="wid_main">
        <div class="zy_navbox">
            <div class="weizhi">
                <div>
                    <p>
                        <img src="../Content/images/web/PIN2.png">当前位置：<a href="index">首页</a> ><span>党群建设</span>
                    </p>
                </div>
                <i></i>
            </div>
            <ul>
                <li v-for="(partyCreate,i) in partyCreateList" :class="{cur:urlParam.index == i}" :id="'index' + i">
                    <h2 v-on:click="changeIndex(i)"><a>{{partyCreate}}</a><i></i></h2>
                </li>
            </ul>

        </div>
        <div class="zy_conbox zy_news">
            <template>
                <ul>
                    <li v-for="d in data">
                        <em style="display:none">{{d.Contents}}</em>
                        <ins style="display:none">{{d.Id}}</ins>
                        <img :src="d.ImageUrl.replace('~','')">
                        <dl>
                            <dt><a>{{d.Title}}</a></dt>
                            <dd>{{d.Abstract}}...</dd>
                        </dl>
                        <span>
                            <i>{{d.CreateTime.substring(0,7)}}</i>
                            <b>{{d.CreateTime.substring(8,10)}}</b>
                        </span>
                    </li>
                </ul>
                <!--底部翻頁-->
                <div style="text-align:right">
                    <el-pagination v-on:size-change="handleSizeChange"
                                   v-on:current-change="handleCurrentChange"
                                   :current-page="currentPage"
                                   :page-sizes="[1, 3, 5, 10]"
                                   :page-size="pageSize"
                                   layout="total, sizes, prev, pager, next, jumper"
                                   :total="totalRows">
                    </el-pagination>
                </div>
            </template>
        </div>
    </div>
</div>


<script>
    var demo = new Vue({
        el: "#partPage",
        mixins: [mixin],
        data: function () {
            return {
                data: []
            }
        },
        methods: {
            changeIndex(index) {
                this.urlParam.index = index
                for (var i = 0; i <= this.indexLength; i++) {
                    $("#index" + i).removeClass("cur")
                }
                $("#index" + index).addClass("cur")
                this.getData()
            },
            getData() {
                var that = this
                var param = {
                    bigType: '党群建设',
                    type: this.partyCreateList[this.urlParam.index],
                    pageIndex: this.currentPage,
                    pageSize: this.pageSize
                }
                this._getData("/NewsAndCases/Read", function (result) {
                    that.data = result.data
                    that.totalRows = result.count
                }, param)
            }
        },
        created: function () {
            this.indexLength = 4
            this.getData()
        }
    })


</script>
<script type="text/javascript">
    $("body").on("click", ".zy_conbox li", function () {
        var NewsUrl = $(this).find("em").html();
        var NewsId = $(this).find("ins").html();
        NewsUrl = NewsUrl.substring(1);
        NewsUrl = HZPartyCreateUrl + NewsId + "&" + NewsUrl;
        window.open(NewsUrl);
    });
</script>